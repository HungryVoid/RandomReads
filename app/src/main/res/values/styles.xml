<resources>

    <!-- Day theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#008476</item>
        <item name="bgImg">@drawable/img1</item>
        <item name="sett_butt">@drawable/sett_butt1</item>
        <item name="go_back_story">@drawable/go_back_story1</item>
        <item name="toggle">@drawable/toggle1</item>
        <item name="night_mode">@drawable/bulb_off</item>
        <item name="refresh">@drawable/refresh1</item>
    </style>

    <!-- Night theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackground">#424242</item>
        <item name="textcolor">#FFFFFF</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#008476</item>
        <item name="bgImg">@drawable/img2</item>
        <item name="sett_butt">@drawable/sett_butt2</item>
        <item name="go_back_story">@drawable/go_back_story2</item>
        <item name="toggle">@drawable/toggle2</item>
        <item name="night_mode">@drawable/bulb_on</item>
        <item name="refresh">@drawable/refresh2</item>
    </style>

</resources>
